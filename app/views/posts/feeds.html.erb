<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div class="row">
      <div class="col-md-3 offset-md-1 text-center">
        <h1>User</h1>
        <button><%= User.count %></button> 
      </div>
      <div class="col-md-4 text-center">
        <h1>Post</h1>
        <button><%= Post.count %></button>
      </div>
      <div class="col-md-3 text-center">
        <h1>Comment</h1>
        <button><%= Comment.count %></button>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4 offset-md-2">
    <h1 class= "text-center">Chatterbox</h1>
    <hr />
    <ol class= "text-center">
      <% @users.each do |user| %>
        <li class= "h3">
          <div class="row">
            <div class="col-md-6 text-right">
              <%= link_to user.name, user_path(user) %>
            </div> 
            <div class="col-md-6">
              <%= user.comments_count %>
            </div>
          </div>
        </li>
      <% end %>
    </ol>
  </div>
  <div class="col-md-4">
    <h1 class= "text-center">Most Popular Post</h1>
    <hr />
    <ol class= "text-center">
      <% @posts.each do |post| %>
        <li class= "h3">
          <div class="row">
            <div class="col-md-6 text-right">
              <%= link_to post.title, post_path(post) %>
            </div> 
            <div class="col-md-6">
              <%= post.last_reply %>
            </div>
          </div>
        </li>
      <% end %>
    </ol>
  </div>
</div>



