
<nav class="navbar navbar-light bg-light justify-content-between">
  <%= link_to @post.title, post_path(@post), class: "navbar-brand" %>
  <form class="form-inline">
    <%= link_to "collect", post_path(@post), class: "btn btn-outline-secondary m-2 my-sm-0" %>
    <%= link_to "comment", post_path(@post), class: "btn btn-outline-secondary my-2 my-sm-0" %>
  </form>
</nav>
<div class="row">
  <div class="col-md-2">
    <div class="card" style="width: 18rem;">
      <%= image_tag @post.user.avatar.url, class: "card-img-top" %>
      <div class="card-body align-center">
        <h5 class="card-title text-center"><%= @post.user.name %></h5>
        <%= link_to "Add Friend", posts_path, class: "btn btn-primary" %>
      </div>
    </div>
    
  </div>
  <div class="col-md-8 offset-md-1">
    <div class="col-md-12">
      <%= image_tag @post.photo.url %>
    </div>
    <div class="col-md-12">
      <%= @post.content %>
    </div>
    <div class="text-right">
      <%= link_to "edit", edit_post_path(@post) %>
      <%= link_to "destroy", post_path(@post), method: :delete, data:{ confirm: "Are you sure?" } %>
    </div>
  </div>
</div>

<% @comments.each do |comment| %>
    <div class= "box-border">
      <div class="avatar">
        <%= image_tag comment.user.avatar.url, class: "img-float rounded" %>
      </div>
      <h4><%= link_to "@#{comment.user.name}, #{comment.created_at.strftime("%Y-%m-%d, %H:%M")}", comment_user_path(comment.user) %></h4>
      <h4><%= comment.content %></h4>
      <!-- 使用者能回覆別人的推播 -->
      <h4><%#= link_to "Reply(#{comment.replies.count})", comment_replies_path(comment) %>
        <%#= render "shared/like", :comment => comment %></h4>
    </div>
    <div class="clearfix"></div>
    <br />

    <% end %>

<%#= render partial: "shared/comments" %>

<!-- 使用者能新增推播（限制在 140 字裡） -->
<div class="form-horizontal">
  <%= form_for @comment, url: new_comment_path do |f| %>
  <div class="form-group offset-md-1 col-md-10">
    <%= f.text_area :content, size: "60x12", placeholder: "What's on your mind?", class: "rounded form-control" %>
  </div>
  <div class="col-sm-6">
    <% if @comment.errors.any? %>
      <%= @comment.errors.full_messages.to_sentence %>
    <% end %>
  </div>
    <div class="col-md-11 text-right">
      <%= f.submit "comment", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
