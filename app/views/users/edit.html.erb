<!-- scaffold generated about error message-->
<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= form.text_field :name, class: 'form-control', placeholder: 'Title' %>
    </div>
    <div class="form-group">
      <%= form.text_area :intro, size: "60x12", class: 'form-control',placeholder: 'Your content here.' %>
    </div>
    <div class="form-group">
      <% unless @user.new_record? %>
        <% unless @user.avatar.url.nil? %>
          <%= image_tag @user.avatar.url %>
        <% end %>
      <% end %>
      <%= form.file_field :avatar, class: 'form-control-file' %>
    </div>
    
    <div class="actions btn-inline">
      <%= form.submit "Submit", class: 'btn btn-primary' %>
    </div>
  </form>
<% end %>

