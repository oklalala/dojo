<p id="notice"><%= notice %></p>

<h1>Posts</h1>


<div class="container">
    <ul class= "nav nav-pills">
      <li role= "presentation" class= "nav-item"><%= link_to "All", root_path, class: "nav-link" %></li>
      <% @categories.each do |category| %>
        <li role= "presentation" class= "nav-item" ><%= link_to category.name, category_path(category), class: "nav-link #{"active" if category == @category}" %></li>
      <% end %>
    </ul>
  <br>
  <div class="row">
    <%= render "shared/post_list", posts: @posts %>
  </div>
</div>
