<table class= "table table-secondary table-hover">
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post), style: 'color:green' %></td>
        <td><%= post.status %></td>
        <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
        <% if @user == current_user %>
        <td>
          <%= link_to edit_post_path(post), style: 'color:green' do %>
            <%= icon 'far', 'edit' %>
          <% end %>  
        </td>
        <td>
          <%= link_to post_path(post), method: :delete, data:{ confirm: "Are you sure?" }, style: 'color:green' do %>
            <%= icon 'far', 'trash-alt' %>
          <% end %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
