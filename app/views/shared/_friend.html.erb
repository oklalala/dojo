<% if user == current_user %>
  <%= link_to 'Edit', edit_user_path(user) %>
<% else %>
  <% if current_user.waiting?(user)%>
    <%= button_tag 'Waiting', class: 'btn btn-outline-secondary' %>
    <%= link_to 'Cansel requist', friendship_path(user), method: :delete %>
  <% elsif current_user.accept_or_not?(user) %>
    <%= link_to 'Accept', accept_friendship_path(user), method: :post, class: 'btn btn-light' %>
  <% elsif current_user.friend?(user) %>
    <%= link_to 'Unfriend', friendship_path(user), method: :delete, class: 'btn btn-secondary' %>
  <% else %>      
    <%= link_to 'Add Friend', friendships_path(friend_id: user), method: :post, class: 'btn btn-secondary'  %>
  <% end %>
<% end %>
