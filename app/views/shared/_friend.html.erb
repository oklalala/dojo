<% if user.friend?(current_user) %>
  <%= link_to 'Unfriend', user_path(user), class: "btn btn-primary" %>
<% elsif user.accept_or_not?(current_user) %>
  <%= link_to 'Accept', user_path(user), class: "btn btn-info inline" %>
  <%= link_to 'Ignore', user_path(user), class: "btn btn-warning inline" %>
<% elsif user.waiting?(current_user) %>
  <%= button_tag "Requisted", class: "btn btn-primary" %>
<% else %>
  <%= link_to 'Friend', user_path(user), class: "btn btn-primary" %>
<% end %>