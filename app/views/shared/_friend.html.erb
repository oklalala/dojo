<% if user.friend?(current_user) %>
  <%= link_to 'Unfriend', unfriend_user_path(user), method: :post, class: "btn btn-primary" %>
<% elsif user.accept_or_not?(current_user) %>
  <%= link_to 'Accept', unfriend_user_path(user), method: :post, class: "btn btn-info" %>
  <%= link_to 'Ignore', unfriend_user_path(user), method: :post, class: "btn btn-info" %>
<% elsif user.waiting?(current_user) %>
  <%= button_tag "Requisted", class: "btn btn-primary" %>
<% else %>
  <%= link_to 'Friend', friend_user_path(user), method: :post, class: "btn btn-primary" %>
<% end %>