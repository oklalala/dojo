<div class="row">
  <% users.each do |user| %>
    <% if user != current_user %>
      <div class="col-md-2">
        <%= link_to user_path(user) do %>
        <div class="card <%='bg-secondary' if @user.accept_or_not?(user) %>" style="width: 10rem;">
          <%= image_tag user.avatar.url, class: "card-img-top" %>
          <div class="card-body align-center">
            <h5 class="card-title text-center <%='text-white' if @user.accept_or_not?(user) %>">
              <%= user.name %>
            </h5>
            <div class="text-center">
              <%= render 'shared/friend', user: user %>
            </div>  
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
