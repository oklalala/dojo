<div class="row">
  <div class="col-md-1 offset-md-1">
    <div class="card" style="width: 10rem;">
      <%= image_tag comment.user.avatar.url, class: "card-img-top" %>
      <div class="card-body align-center">
        <h5 class="card-title text-center">
          <%= link_to comment.user.name, user_path(comment.user) %>
        </h5>
        <div class="text-center">
          <% if comment.user == current_user %>
            <%= link_to "Edit", edit_user_path(comment.user), class: "btn btn-success" %>
          <% else %>
            <%= render 'shared/friend', user: comment.user %>
            <%#= link_to "Add Friend", posts_path, class: "btn btn-secondary" %>
          <% end %>
        </div>  
      </div>
    </div>
  </div>

  <!-- comment conetnt -->
  <div class="col-md-8 offset-md-1">
    <div class="col-md-12">
      <% if comment.photo? %>
        <%= image_tag comment.photo.url %>
      <% end %>
    </div>
    <div class="col-md-12">
      <%= comment.content %>
    </div>

    <% if comment.has_attribute?(:status) %>
      <%= render 'shared/edit_post', comment: comment %>
    <% else %>
      <%= render 'shared/edit_comment', comment: comment %>
    <% end %>
    
  </div>
</div>